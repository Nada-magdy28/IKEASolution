@model UpdatedDepartmentDto
@{
    ViewData["Title"] = "Edit Department";
}
<div class="row justify-content-center align-content-center flex-column">
    <h1 class="col-6 my-4">Edit Department : @Model.Name</h1>
    <form asp-action="Edit" method="post" class="col-6">
        <div asp-validation-summary="ModelOnly"> </div>
        <div class="from-grop">
            <label class="from-label" asp-for="Code"></label>
            <input asp-for="Code" class="from-control" />
            <span class="text-danger" asp-validation-for="Code"></span>

        </div>
        <div class="from-grop">
            <label class="from-label" asp-for="Name"></label>
            <input asp-for="Name" class="from-control" />
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>
        <div class="from-grop">
            <label class="from-label" asp-for="Description"></label>
            <textarea asp-for="Description" class="from-control"></textarea>


        </div>
        <div class="from-grop">
            <label class="from-label" asp-for="CreationDate"></label>
            <input asp-for="CreationDate" type="date" class="from-control" />

        </div>
        <div class="mt-4">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>

    </form>
</div>




